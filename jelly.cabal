name: jelly
version: 0.1
build-type: Simple
cabal-version: >= 1.10

executable jelly
  hs-source-dirs: src
  main-is: Main.hs
  other-modules:
    Audio
    Jammit
  default-language: Haskell2010
  ghc-options: -Wall -threaded
  build-depends:
    base
    , sdl2 >= 1.3.0 && < 1.4
    , sdl2-image
    , containers
    , directory
    , filepath
    , property-list
    , OpenAL
    , hsndfile
    , hsndfile-vector
    , vector
    , rubberband
    , conduit
    , transformers
